{
  "name": "Blazor WebAssembly - .NET 6",
  "image": "mcr.microsoft.com/vscode/devcontainers/dotnet:6.0",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "forwardPorts": [
    5000, 5001
  ],
  "extensions": [
    "ms-dotnettools.csharp"
  ],
  "postCreateCommand": "dotnet restore",
  "remoteUser": "vscode"
}
