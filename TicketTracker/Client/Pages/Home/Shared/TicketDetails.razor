<div class="drawer-wrapper @(_isOpen ? "slide" : "")">
    <div class="drawer-mask"></div>
    <div class="drawer">
        @if (_activeTicket is not null)
        {
            <div class="drawer-content">
                @if(_activeTicket.Image is null)
                {
                    <img src="https://via.placeholder.com/640x688.jpg?text=No+Image+For+Ticket" />
                }
                else
                {
                    <ImageDisplay ImageData="_activeTicket.Image"/>
                }
            </div>
            <div class="drawer-controls">
                <button class="btn btn-secondary" @onclick="Close">Close</button>
            </div>
        }
    </div>
</div>

@code {
    private bool _isOpen;
    private TicketDto? _activeTicket;

    [Parameter, EditorRequired] public TicketDto? Ticket { get; set; }

    protected override void OnParametersSet()
    {
        if (Ticket != null)
        {
            _activeTicket = Ticket;
            _isOpen = true;
        }
    }

    private void Close()
    {
        _activeTicket = null;
        _isOpen = false;
    }
}
