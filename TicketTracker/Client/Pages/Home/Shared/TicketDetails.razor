<div class="drawer-wrapper @(_isOpen ? "slide" : "")">
    <div class="drawer-mask"></div>
    <div class="drawer">
        @if (_activeTicket is not null)
        {
            <div class="drawer-content">
                <img src="https://via.placeholder.com/640x556.jpg?text=No+Image+For+Ticket" />
                <div class="ticket-details">
                    <h3>@_activeTicket.Description</h3>
                    <h6 class="mb-3 text-muted"><span class="bi bi-receipt" title="Ticket Number"></span> @_activeTicket.TicketNumber</h6>
                    <div class="d-flex justify-content-between mb-3">
                        <span><span class="bi bi-coin mr-2" title="Amount"></span> @_activeTicket.Amount</span>
                        <span><span class="bi bi-calendar-plus" title="Date"></span> @_activeTicket.DateCreated.ToShortDateString()</span>
                    </div>
                    <span><span class="bi bi-fingerprint mr-2" title="Nit"></span> @_activeTicket.Nit</span>
                </div>
            </div>
            <div class="drawer-controls">
                <button class="btn btn-secondary" @onclick="Close">Close</button>
            </div>
        }
    </div>
</div>

@code {
    private bool _isOpen;
    private TicketDto? _activeTicket;

    [Parameter, EditorRequired] public TicketDto? Ticket { get; set; }

    protected override void OnParametersSet()
    {
        if (Ticket != null)
        {
            _activeTicket = Ticket;
            _isOpen = true;
        }
    }

    private void Close()
    {
        _activeTicket = null;
        _isOpen = false;
    }
}
