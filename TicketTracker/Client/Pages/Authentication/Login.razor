@page "/login"

@layout AuthLayout

<EditForm Model="SignInRequest" OnValidSubmit="LoginUser">

    <FluentValidationValidator />

    <div class="row form-group justify-content-center align-items-center vh-100">
        <div class="col-6">
            <div class="card border">
                <div class="card-body px-lg-5 pt-4">
                    <h3 class="col-12 text-center py-2" style="color:#151f42;">
                        <i class="bi bi-box-arrow-in-right"></i> <strong>Sign In</strong>          
                    </h3>

                    @if (ShowSignInErrors)
                    {
                        <p class="text-center text-danger">@Errors</p>
                    }

                    <div class="py-2">
                        <InputText @bind-Value="SignInRequest.UserName" id="email" placeholder="Email..." class="form-control mb-2" />
                        <ValidationMessage For="(()=>SignInRequest.UserName)"></ValidationMessage>
                    </div>
                    <div class="py-2">
                        <InputText @bind-Value="SignInRequest.Password" type="password" placeholder="Password..." id="password" class="form-control mb-2" />
                        <ValidationMessage For="(()=>SignInRequest.Password)"></ValidationMessage>
                    </div>
                    <div class="py-2">
                        <button type="submit" class="btn btn-block" style="background-color:#151f42; color:white;">Sign in</button>
                        <a href="/register" class="btn btn-primary text-white m-2">Register as a new user</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</EditForm>